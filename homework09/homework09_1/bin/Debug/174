<script type="text/javascript">
    require(["jquery"],function($){
        $(document).on("click", ".earthday-cmsblock .moreInfo", function(){

            if($(this).data("action")=="close"){
                $(this).data("height",$(".earthday-cmsblock .earthday-head-content").css("height"))
                $(".earthday-cmsblock .earthday-head-content").css("height","auto")
                $(this).data("action","open")
                $(this).text("收起")
            }else{
                $(".earthday-cmsblock .earthday-head-content").css("height",$(this).data("height"))
                $(this).data("action","close")
                $(this).text("查看更多信息 >")
            }

        })
        $('.earthday-content-block  input[name=type][value=personal]').attr("checked","checked")
    })
    
</script>

